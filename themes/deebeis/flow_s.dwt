        location.href = 'user.php?act=add_booking&id=' + result.goods_id;
      }
    }
    else if (result.error == 6)
    {
      openSpeDiv(result.message, result.goods_id);
    }
    else
    {
      alert(result.message);
    }
  }
  else
  {
    location.href = 'flow.php';
  }
}
